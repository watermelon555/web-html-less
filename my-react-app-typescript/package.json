{
  "name": "my-react-app-typescript",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@craco/craco": "^6.4.3",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.8",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "babel-eslint": "^10.1.0",
    "circular-dependency-plugin": "^5.2.2",
    "cra-template-typescript": "1.1.3",
    "craco-less": "^2.0.0",
    "less-plugin-npm-import": "^2.1.0",
    "mini-css-extract-plugin": "^2.5.2",
    "node-sass": "^7.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router": "^6.2.1",
    "react-router-dom": "^6.2.1",
    "react-scripts": "5.0.0",
    "sass-loader": "^12.4.0",
    "sass-resources-loader": "^2.2.4",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "typescript": "^4.5.4",
    "vconsole-webpack-plugin": "^1.7.3",
    "web-vitals": "^2.1.3",
    "webpack-bundle-analyzer": "^4.5.0"
  },
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "test": "craco test",
    "eject": "react-scripts eject",
    "lint": "yarn lint-eslint && yarn lint-stylelint",
    "lint-eslint": "eslint -c .eslintrc.json --ext .ts,.tsx,.js src",
    "lint-stylelint": "stylelint --config .stylelintrc src/**/*.{less,css,scss}"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "standard"
    ],
    "parser": "babel-eslint"
  },
  "pre-commit": [
    "lint"
  ],
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@types/react-router": "^5.1.17",
    "@types/react-router-dom": "^5.3.2",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "craco-sass-resources-loader": "^1.1.0",
    "eslint": "^8.13.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-webpack": "^0.13.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "font-awesome": "^4.7.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.2.0",
    "prettier": "^2.5.1",
    "prettier-eslint": "^13.0.0",
    "standard": "^16.0.4",
    "stylelint": "^14.6.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^25.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.5.0",
    "stylelint-order": "^5.0.0",
    "stylelint-prettier": "^2.0.0",
    "ts-jest": "^27.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "eslint --config .eslintrc.json"
    ],
    "*.{css,less,scss}": [
      "stylelint --config .stylelintrc"
    ],
    "*.{ts,tsx,js,json,html,yml,css,less,scss,md}": [
      "prettier --write"
    ]
  }
}
